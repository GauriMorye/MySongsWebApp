@model IEnumerable<MySongs>
@{
    ViewData["Title"] = "Index";
}

@if(TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["success"]');
	</script>
}

<h1>Songs PlayList</h1> <br />

 <a asp-controller="Songs" asp-action="Add" class="btn btn-primary" >
               <i class="bi bi-plus-square-fill"></i> &nbsp; &nbsp; Add New Song
			</a>
    <br /><br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Song Name
            </th>
            <th>
                Artist
            </th>
            <th>
                Duration(mins)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width:"33%">
                    @obj.Name
                </td>
                <td width:"33%">
                    @obj.Artist
                </td>
                <td width:"33%">
                    @obj.Duration
                </td>
                <td width="10%">
                    <div class="w-50 btn-group" role="group">
                        <a asp-controller="Songs" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-warning mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
            </tr>
        }
    </tbody>
</table>
